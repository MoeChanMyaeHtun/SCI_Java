package com.sci;

import java.util.Scanner;

public class scannerShop {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int cash = 100000;
		int totalAmount = 0;
//		showMenu();
		
		System.out.print("Enter Menu: ");
		int menu = scanner.nextInt();
		System.out.print("Enter qty: ");
		int qty = scanner.nextInt();
		
		if(menu == 1) {
			totalAmount = calculate("Apple", 1500, qty); 
		}
		else if(menu == 2) {
			totalAmount = calculate("Orange", 1500, qty); 
		}
		else{
			totalAmount = calculate("Mango", 1500, qty); 
		}
		System.out.println("remain amount => " + (cash- totalAmount)+"MMK"); 

	}

	private static int calculate(String item, int price, int qty) {
		 int totalAmount = qty * price;
	        return totalAmount;
	}

//	private static void showMenu() {
//		System.out.println("1. Apple -> 1500");
//		System.out.println("2. Orange -> 500");
//		System.out.println("3. Mango -> 1000");
//		
//	}
	
	

}
