package com.sci;

public class shop {

	public static void main(String[] args) {
		//cash = 100000;
		//menu = ?;
		//qty = ?;
		int cash = 100000;
		int menu = 1;
		int qty = 10;
		int totalAmount = 0;
		showMenu();
		if(menu == 1) {
			totalAmount = qty * 1500;
			 System.out.println("apple" + qty); 
			 
			 System.out.println("amount" + totalAmount); 
		}else if (menu == 2){
			totalAmount = qty * 500;
			 System.out.println("orange" + qty); 
			 
			 System.out.println("amount" + totalAmount); 
		}else{
			totalAmount = qty * 1000;
			 System.out.println("mango" + qty); 
			 
			 System.out.println("amount" + totalAmount); 
		}
		
		System.out.println("remain amount" + (cash- totalAmount)+"MMK"); 
	}
	
	

	private static void showMenu() {
		// TODO Auto-generated method stub
		System.out.println("1. Apple -> 1500MMK");
		System.out.println("2. Orange -> 500MMK");
		System.out.println("3. Mango -> 1000MMK");
		
	}

}
